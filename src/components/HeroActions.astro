---
import cvContact from '../data/contactLinks.json';
import { Icon } from 'astro-icon/components';

const { isFooter } = Astro.props;
---
<nav class={"flex flex-wrap items-center gap-4" + (!isFooter ? " mt-8" : "")} aria-label={"Hero Actions" + (isFooter ? "Footer" : "")}>
  {cvContact.contact.email.length > 0 && (
      <a href={`mailto:${cvContact.contact.email}`}
        class="p-3 bg-white dark:bg-zinc-800/50 border border-zinc-200 dark:border-white/10
          text-zinc-600 dark:text-zinc-400 hover:text-cyan-600 dark:hover:text-cyan-400
          rounded-xl shadow-sm transition-all duration-300 hover:-translate-y-1 hover:shadow-md"
        title="Email">
        <Icon name="lucide:mail" size={20} />
      </a>
    )}

  <div class="flex items-center gap-3">
    {cvContact.contact.linkedin.length > 0 && (
      <a href={cvContact.contact.linkedin} target="_blank" rel="noopener noreferrer"
        class="p-3 bg-white dark:bg-zinc-800/50 border border-zinc-200 dark:border-white/10
          text-zinc-600 dark:text-zinc-400 hover:text-cyan-600 dark:hover:text-cyan-400
          rounded-xl shadow-sm transition-all duration-300 hover:-translate-y-1 hover:shadow-md"
        title="LinkedIn">
        <Icon name="lucide:linkedin" size={20} />
      </a>
    )}

    {cvContact.contact.github.length > 0 && (
      <a href={cvContact.contact.github} target="_blank" rel="noopener noreferrer"
        class="p-3 bg-white dark:bg-zinc-800/50 border border-zinc-200 dark:border-white/10
          text-zinc-600 dark:text-zinc-400 hover:text-cyan-600 dark:hover:text-cyan-400
          rounded-xl shadow-sm transition-all duration-300 hover:-translate-y-1 hover:shadow-md"
        title="GitHub">
        <Icon name="lucide:github" size={20} />
      </a>
    )}

    {(cvContact.contact.curriculum.length > 0 && !isFooter) && (
        <a href={cvContact.contact.curriculum} target="_blank" rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-6 py-3 
            bg-zinc-900 dark:bg-white text-white dark:text-zinc-900 
            hover:bg-cyan-600 dark:hover:bg-cyan-400
            rounded-xl transition-all duration-300 hover:-translate-y-1 font-medium">
          <span>Ver CV</span>
          <Icon name="lucide:external-link" size={16} class="opacity-70" />
        </a>
      )}
  </div>
</nav>