---
import cvEs from '../data/cv.json';
import cvEn from '../data/cv-en.json';
import { Icon } from 'astro-icon/components';
import { getIconName } from '../utils/icons';

// Definimos la interfaz para evitar el tipo 'unknown'
interface SkillItem {
  name: string;
  category: string;
  important?: boolean;
}

const getGroupedSkills = (data: any) => {
  const allTags: SkillItem[] = [
    ...(data.experience?.flatMap((e: any) => e.tags || []) || []),
    ...(data.projects?.flatMap((p: any) => p.tags || []) || [])
  ];

  const groups: Record<string, Map<string, SkillItem>> = {};

  allTags.forEach(tag => {
    if (!groups[tag.category]) groups[tag.category] = new Map();
    
    const existing = groups[tag.category].get(tag.name);
    if (!existing || tag.important) {
      groups[tag.category].set(tag.name, tag);
    }
  });

  return groups;
};

const groupedEs = getGroupedSkills(cvEs);
const groupedEn = getGroupedSkills(cvEn);

const categories = Object.keys(groupedEs).map((catEs, index) => {
  const skillsArray = Array.from(groupedEs[catEs].values());

  const sortedSkills = skillsArray.sort((a, b) => {
    if (!!a.important !== !!b.important) {
      return a.important ? -1 : 1;
    }
    return a.name.localeCompare(b.name);
  });

  return {
    es: catEs,
    en: Object.keys(groupedEn)[index] || catEs,
    skills: sortedSkills
  };
});
---

<section id="skills" class="py-10 px-6 transition-colors duration-300">
  <div class="max-w-5xl mx-auto 
    bg-zinc-50 border-zinc-200 
    dark:bg-zinc-900/40 dark:border-white/5 
    rounded-[3rem] p-8 md:p-16 relative overflow-hidden group shadow-sm dark:shadow-2xl">
    
    <div class="flex items-center gap-2 mb-16 justify-center">
      <h2 
        class="text-zinc-900 dark:text-white text-3xl font-bold tracking-tighter uppercase "
        data-es="Stack Tecnol칩gico"
        data-en="Tech Stack"
      >
        Stack Tecnol칩gico
      </h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-8">
      {categories.map((cat) => (
        <div class="p-6 
          bg-white border-zinc-200 
          dark:bg-zinc-900/20 dark:border-white/5 
          rounded-3xl group/card hover:border-cyan-500/20 transition-all shadow-sm dark:shadow-none">
          
          <h3 
            class="text-cyan-800 dark:text-cyan-500 font-mono text-xs uppercase mb-6 italic tracking-widest"
            data-es={`// ${cat.es}`}
            data-en={`// ${cat.en}`}
          >
            // {cat.es}
          </h3>
          
          <div class="flex flex-wrap gap-4">
            {cat.skills.map(skillName => (
              <div class="flex flex-col items-center gap-2 group/item">
                <div class="w-12 h-12 flex items-center justify-center rounded-2xl 
                  bg-zinc-50 border-zinc-100
                  dark:bg-white/[0.03] dark:border-white/5 
                  group-hover/item:border-cyan-500/50 group-hover/item:bg-cyan-500/5 
                  transition-all duration-300">
                  <Icon 
                    name={getIconName(skillName.name)} 
                    class="w-6 h-6 text-gray-600 dark:text-zinc-500 group-hover/item:text-cyan-500 transition-colors" 
                  />
                </div>
                <span class="text-[10px] font-mono text-zinc-500 dark:text-zinc-300 uppercase group-hover/item:text-zinc-900 dark:group-hover/item:text-white transition-colors">
                  {skillName.name}
                </span>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<script>
  const updateSkills = () => {
    const lang = localStorage.getItem('lang') || 'es';
    const elements = document.querySelectorAll('#skills [data-es]');
    elements.forEach(el => {
      const text = el.getAttribute(`data-${lang}`);
      if (text) el.textContent = text;
    });
  };

  // Escuchar el evento personalizado o el click del bot칩n
  window.addEventListener('language-changed', updateSkills);
  
  // Ejecutar al cargar la p치gina
  updateSkills();
</script>